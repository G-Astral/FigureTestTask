<Window x:Class="FigureTestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FigureTestTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" >
            <ComboBox x:Name="FigureSelection" Height="25" Width="150" SelectionChanged="FigureChanged">
                <ComboBoxItem>Прямоугольник</ComboBoxItem>
                <ComboBoxItem>Квадрат</ComboBoxItem>
                <ComboBoxItem>Окружность</ComboBoxItem>
            </ComboBox>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext"/>

        <Grid Grid.Column="2">
            <TextBlock x:Name="TestCheck" Text="Ничего не выбрано" Height="20" Width="Auto" HorizontalAlignment="Center"></TextBlock>
        </Grid>
    </Grid>
</Window>
